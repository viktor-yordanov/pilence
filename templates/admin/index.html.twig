{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Admin Dashboard</h1>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card h-100 text-center">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Homepage</h5>
                    <p class="card-text">Update landing page content</p>
                    <a href="{{ path('admin_manage_homepage') }}" class="btn btn-primary mt-auto">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 text-center">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">Manage project categories</p>
                    <a href="{{ path('admin_manage_categories') }}" class="btn btn-primary mt-auto">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 text-center">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Projects</h5>
                    <p class="card-text">Manage projects and images</p>
                    <a href="{{ path('admin_manage_projects') }}" class="btn btn-primary mt-auto">View</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
