{% extends 'base.html.twig' %}

{% block title %}Manage Categories{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Manage Categories</h1>

        <div class="mb-3">
            <a href="{{ path('admin_add_category') }}" class="btn btn-primary">Add New Category</a>
        </div>

        {% if categories is not empty %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.title }}</td>
                            <td>{{ category.slug }}</td>
                            <td>
                                <a href="{{ path('admin_edit_category', { 'id': category.id }) }}" class="btn btn-warning btn-sm">Edit</a>
{#                                <form action="{{ path('admin_delete_category', { 'id': category.id }) }}" method="post" style="display:inline;">#}
{#                                    {{ csrf_token('delete' ~ category.id) }}#}
{#                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>#}
{#                                </form>#}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No categories found.</p>
        {% endif %}
    </div>
{% endblock %}
