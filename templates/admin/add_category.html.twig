{% extends 'base.html.twig' %}

{% block title %}Create Category{% endblock %}
{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Create New Category</h1>
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.slug) }}
    {{ form_row(form.projects) }}
    <button class="btn btn-primary">Save</button>
    {{ form_end(form) }}
    <a href="{{ path('admin_manage_categories') }}" class="btn btn-secondary">Back to Categories</a>
</div>
{% endblock %}
